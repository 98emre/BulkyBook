@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">

   <partial name="_Notification" />

    <div class="row pt-5">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">  
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Date Time</th>
                <th></th>
            </tr>
        </thead>
               
        @if (Model.Any())
        {
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.DisplayOrder</td>
                        <td width="30%">@item.CreatedDateTime</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-primary mx-2 d-flex"> <i class="bi bi-pencil-square"></i> Edit</a>
                                   
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger mx-2 d-flex"> <i class="bi bi-trash3"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        }

        else
        {
            <tbody>
                <tr>
                    <td colspan="2">The list is empty</td>
                </tr>
            </tbody>
        }
    </table>

</div>


